// ESLint Reset - A starter .eslintrc file that uses airbnb guidelines and resets some rules
// within all our avocando projcts
// http://eslint.org/docs/rules/

{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals": {},
  "env": {
    "browser": true,
    "node": true,
    "es5": true
  },
  "settings": {
    "ecmascript": 6
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "func-names": 0,
    "object-curly-spacing": [2, "never"],
    "arrow-parens": [2, "always"],
    "no-underscore-dangle": 0,
    "semi": [2, "never"],
    "max-len": [1, 130],
    "id-length": 0,
    "import/no-unresolved": 0,
    "import/no-extraneous-dependencies": 0,
    "space-before-function-paren": ["error", "never"],
    "prefer-arrow-callback": 0,
    "react/prop-types": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-param-reassign": 0,
  }
}
